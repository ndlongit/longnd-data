			<security:user name="admin1" password="7c4a8d09ca3762af61e59520943dc26494f8941b"
				authorities="ROLE_ADMIN" />				
			<security:user name="user1" password="7c4a8d09ca3762af61e59520943dc26494f8941b"
				authorities="ROLE_USER, ROLE_STUDENT" />
		</security:user-service>
	</security:authentication-provider>

</beans>
