<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
<head>
    <title>${message:app-name} - ${title}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" title="TinyCMS" href="${asset:context:styles/global.css}" media="screen" />
    <link rel="stylesheet" type="text/css" href="${asset:context:styles/form.css}" media="screen" />
    <script type="text/javascript">
        <t:Delegate to="jsCode" />
    </script>
    <style type="text/css">
        <t:Delegate to="cssCode" />
    </style>
</head>
<body>
    <div id="wrap">
        <div id="header">
            <t:If test="header" negate="true">
                <h1><t:PageLink page="Index">${message:app-name}</t:PageLink></h1>
                <em>${message:app-slogan}</em>
                <p:Else>
                    <t:Delegate to="header" />
                </p:Else>
            </t:If>
        </div>
        <div class="MainContent">
            <t:If test="header" negate="true">
                <h2>${title}</h2>
            </t:If>
            <t:body />
        </div>
    </div>
    <div id="footer">
        <span id="copyright"><t:OutputRaw value="message:copyright-line" /></span>
        <span id="links">
            <t:PageLink page="admin/Index">${message:admin-home}</t:PageLink>
            <t:IfAuthenticated>
                <t:PageLink page="SignOut">${message:sign-out}</t:PageLink>
                <p:Else>
                    <t:PageLink page="SignIn">${message:sign-in}</t:PageLink>
                </p:Else>
            </t:IfAuthenticated>
        </span>
    </div>
</body>
</html>
