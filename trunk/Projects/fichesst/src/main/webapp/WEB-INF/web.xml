<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>fichesst</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:com/structis/fichesst/server/spring/applicationContext.xml
		</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:com/structis/fichesst/server/log4j.properties</param-value>
	</context-param>
	<!--begin  -->
<!-- 	<filter> -->
<!-- 		<filter-name>springSecurityFilterChain</filter-name> -->
<!-- 		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class> -->
<!-- 	</filter> -->
<!-- 	<filter> -->
<!-- 		<filter-name>SpnegoWrapperHttpFilter</filter-name> -->
<!-- 		<filter-class>com.structis.fichesst.server.filter.SpnegoWrapperFilter</filter-class> -->
<!-- 	</filter> -->
	<!--end  -->
	<filter>
		<filter-name>springRequestFilter</filter-name>
		<filter-class>org.springframework.web.filter.RequestContextFilter</filter-class>
	</filter>
	<!-- begin -->
<!-- 	<filter-mapping> -->
<!-- 		<filter-name>springSecurityFilterChain</filter-name> -->
<!-- 		<url-pattern>/*</url-pattern> -->
<!-- 	</filter-mapping> -->
<!-- 	Filter Kerberos/SPNEGg -->
<!-- 	<filter-mapping> -->
<!-- 		<filter-name>SpnegoWrapperHttpFilter</filter-name> -->
<!-- 		<url-pattern>/*</url-pattern> -->
<!-- 	</filter-mapping> -->
<!-- 	end   -->
	<filter-mapping>
		<filter-name>springRequestFilter</filter-name>
		<url-pattern>/fichesst/springGwtServices/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>springGwtRemoteServiceServlet</servlet-name>
		<servlet-class>org.spring4gwt.server.SpringGwtRemoteServiceServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>exportPdfAcceuilServlet</servlet-name>
		<servlet-class>com.structis.fichesst.server.service.exportpdf.ExportPdfAcceuilServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>exportPdfCustomFichestServlet</servlet-name>
		<servlet-class>com.structis.fichesst.server.service.exportpdf.ExportPdfCustomFichestServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>downloadFileServlet</servlet-name>
		<servlet-class>com.structis.fichesst.server.util.FileDownloadServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>springGwtRemoteServiceServlet</servlet-name>
		<url-pattern>/fichesst/springGwtServices/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>exportPdfAcceuilServlet</servlet-name>
		<url-pattern>/acceuil.pdf</url-pattern>
	</servlet-mapping>
	 <servlet-mapping>
		<servlet-name>exportPdfCustomFichestServlet</servlet-name>
		<url-pattern>/custom_fichest.pdf</url-pattern>
	</servlet-mapping>
	 <servlet-mapping>
		<servlet-name>downloadFileServlet</servlet-name>
		<url-pattern>/downloadFile</url-pattern>
	</servlet-mapping>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>fichesst.html</welcome-file>
	</welcome-file-list>

</web-app>
