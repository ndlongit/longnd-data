<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       	   http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<import resource="classpath:com/structis/fichesst/server/spring/properties-context.xml"/>
	<import resource="classpath:com/structis/fichesst/server/spring/persistence-context.xml"/>
	<import resource="classpath:com/structis/fichesst/server/spring/bean-context.xml"/>
