	<bean id="bean-context" class="org.springframework.context.support.ClassPathXmlApplicationContext">  
	     <constructor-arg>  
	         <list>
	             <value>classpath:com/structis/fichesst/server/spring/properties-context.xml</value>  
	             <value>classpath:com/structis/fichesst/server/spring/manager-context.xml</value>
	             <value>classpath:com/structis/fichesst/server/spring/dozer-context.xml</value>
	             <value>classpath:com/structis/fichesst/server/spring/persistence-context.xml</value>
	             <value>classpath:com/structis/fichesst/server/spring/bean-context.xml</value>
	             <value>classpath:com/structis/fichesst/server/spring/guimanagement-context.xml</value>	 
<!-- 	             <value>classpath:com/structis/fichesst/server/spring/security-context.xml</value>	              -->
	         </list>  
	     </constructor-arg>  
	 </bean>
</beans>

