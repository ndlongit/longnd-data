<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Properties -->
	<bean id="placeholderConfig"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="classpath:fichesst.properties" />
	</bean>

	<bean id="appProperties" class="com.structis.fichesst.server.properties.AppProperties">
		<property name="appName" value="${app.name}" />
		<property name="appVersion" value="${app.version}" />
	</bean>
	
	<!-- Messages properties -->
	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basename"
			value="com.structis.fichesst.client.message.Messages" />
	</bean>
</beans>
