<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.structis.fichesst.server"
		name-generator="com.structis.fichesst.server.util.WithoutTrailingImplBeanNameGenerator" />
		   
	<bean id="entityScanner" class="com.structis.fichesst.server.service.util.EntityScanner">
		<property name="packagesToScan">
			<list>
				<value>com.structis.fichesst.server.bean.domain</value>
			</list>
		</property>
	</bean>	    
</beans>
