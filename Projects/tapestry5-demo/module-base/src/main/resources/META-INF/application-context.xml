<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
       	   http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	<import resource="classpath:META-INF/bean-context.xml" />
	<import resource="classpath:META-INF/persistence-context.xml" />
	<import resource="classpath:META-INF/service-context.xml" />
	<!-- <import resource="classpath:META-INF/security-context.xml"/> -->
	<import resource="classpath:META-INF/properties-context.xml" />
	
<!-- 	<import resource="classpath:struts-context.xml" /> -->

	<bean id="bean-context"
		class="org.springframework.context.support.ClassPathXmlApplicationContext">
		<constructor-arg>
			<list>
				<value>classpath:META-INF/bean-context.xml</value>
				<value>classpath:META-INF/persistence-context.xml</value>
				<value>classpath:META-INF/service-context.xml</value>
				<!-- <value>classpath:META-INF/security-context.xml</value> -->
				<value>classpath:META-INF/properties-context.xml</value>
				
<!-- 				<value>classpath:struts-context.xml</value> -->
			</list>
		</constructor-arg>
	</bean>
</beans>

