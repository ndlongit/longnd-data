<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<display-name>tapestry5-demo Tapestry 5 Application</display-name>
	<context-param>
		<!--
			The only significant configuration for Tapestry 5, this informs
			Tapestry of where to look for pages, components and mixins.
		-->
		<param-name>tapestry.app-package</param-name>
		<param-value>org.tapestry5.demo.web</param-value>
	</context-param>

	<!-- Don't compress whitespace -->
	<context-param>
		<param-name>tapestry.compress-whitespace</param-name>
		<param-value>false</param-value>
	</context-param>

	<!-- Spring Security - Begin -->
	<!-- Add security-context.xml for Spring Security -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath*:/META-INF/application-context.xml, classpath*:/META-INF/security-context.xml</param-value>
	</context-param>	
	<!-- Spring Security - End -->
	
	<filter>
		<filter-name>app</filter-name>
		<filter-class>org.apache.tapestry5.spring.TapestrySpringFilter</filter-class>
	</filter>
	<filter>
		<filter-name>jpa</filter-name>
		<filter-class>org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter</filter-class>
	</filter>

	<!-- Spring Security - Begin -->
	<!-- 	Remember to un-comment 2 line in application-context.xml for security-context.xml-->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Spring Security - End -->
	<filter-mapping>
		<filter-name>jpa</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>app</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>      
