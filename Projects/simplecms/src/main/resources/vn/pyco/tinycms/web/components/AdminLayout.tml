<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
<head>
    <title>${message:app-name} - ${title}</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <link rel="stylesheet" type="text/css" title="${message:app-name}" href="${asset:context:styles/global.css}" media="screen" />
    <link rel="stylesheet" type="text/css" href="${asset:context:styles/form.css}" media="screen" />
</head>
<body class="Admin">
    <div id="wrap">
        <div id="header">
            <h1><t:PageLink page="admin/Index">${message:app-name}</t:PageLink></h1>
            <em>${message:app-slogan}</em>
            <div>
                [${message:websites}:
                <t:Loop source="availableSites" value="site">
                    <t:PageLink page="Index" context="${site.alias}">${site.alias}</t:PageLink> 
                </t:Loop>]
                <t:PageLink page="admin/Index">${message:admin-home}</t:PageLink>
                <t:IfAuthenticated>
                    <t:PageLink page="SignOut">${message:sign-out}</t:PageLink>
                    <p:Else>
                        <t:PageLink page="SignIn">${message:sign-in}</t:PageLink>
                    </p:Else>
                </t:IfAuthenticated>
            </div>
        </div>
        <t:Delegate to="sidebar" />
        <div class="MainContent">
            <h2>${title}</h2>
            <t:body />
        </div>
    </div>
    <div id="clear"></div>
    <div id="footer">
        <span><t:OutputRaw value="message:copyright-line" /></span>
    </div>
</body>
</html>
