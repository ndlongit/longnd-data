<!-- バッチデプロイ時に使用するアーカイブ作成のための assembly -->
<!-- ファイルは crm-batch-[project.version]-[assembly.id].tar.gz という名前で作成される -->
<!-- アーカイブ内 -->
<!-- `- crm-batch/lib -->
<!-- `- crm-batch/bin -->
<assembly>
    <id>deploy</id>
    <!-- 出力形式 -->
    <formats>
        <format>tar.gz</format>
    </formats>
    <!-- アーカイブ内のディレクトリ -->
    <baseDirectory>crm-batch</baseDirectory>
    <fileSets>
        <!-- ビルドされた jar -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory>/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <!-- ソースは除外 -->
            <excludes>
                <exclude>*-sources.jar</exclude>
            </excludes>
        </fileSet>
        <!-- シェルスクリプト -->
        <fileSet>
            <directory>src/main/script</directory>
            <outputDirectory>/bin</outputDirectory>
            <includes>
                <include>*.sh</include>
            </includes>
            <directoryMode>0755</directoryMode>
            <fileMode>0755</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <!-- シェルスクリプト用設定 -->
        <fileSet>
            <directory>src/main/script</directory>
            <outputDirectory>/bin</outputDirectory>
            <excludes>
                <exclude>*.sh</exclude>
            </excludes>
            <directoryMode>0755</directoryMode>
            <fileMode>0644</fileMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
    </fileSets>
    <!-- 依存ライブラリ -->
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>runtime</scope>
            <outputDirectory>/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>
